<openerp>
    <data>
        <record model="workflow" id="wkf_postit">
            <field name="name">Prisme postit workflow</field>
            <field name="osv">prisme.postit</field>
            <field name="on_create">True</field>
        </record>

        <record model="workflow.activity" id="active">
            <field name="name">Active</field>
            <field name="wkf_id" ref="wkf_postit"/>
            <field name="flow_start" eval="True"/>
            <field name="kind">function</field>
            <field name="action">action_active()</field>
        </record>
        <record model="workflow.activity" id="get_started">
            <field name="name">Get Started</field>
            <field name="wkf_id" ref="wkf_postit"/>
            <field name="kind">function</field>
            <field name="action">action_start()</field>
        </record>
        <record model="workflow.activity" id="in_process">
            <field name="name">In_process</field>
            <field name="wkf_id" ref="wkf_postit"/>
            <field name="kind">function</field>
            <field name="action">action_in_process()</field>
        </record>
        <record model="workflow.activity" id="terminated">
            <field name="name">Terminated</field>
            <field name="wkf_id" ref="wkf_postit"/>
            <field name="kind">function</field>
            <field name="action">action_close()</field>
        </record>

        <record model="workflow.transition" id="postit_active_to_get_started">
            <field name="act_from" ref="active"/>
            <field name="act_to" ref="get_started"/>
            <field name="signal">get_started</field>
        </record>
        <record model="workflow.transition" id="postit_get_started_to_in_process">
            <field name="act_from" ref="get_started"/>
            <field name="act_to" ref="in_process"/>
            <field name="signal">in_process</field>
        </record>
        <record model="workflow.transition" id="postit_in_process_to_terminated">
            <field name="act_from" ref="in_process"/>
            <field name="act_to" ref="terminated"/>
            <field name="signal">terminated</field>
        </record>
        <record model="workflow.transition" id="postit_terminated_to_active">
            <field name="act_from" ref="terminated"/>
            <field name="act_to" ref="active"/>
            <field name="signal">active</field>
        </record>
        <record model="workflow.transition" id="postit_in_process_to_active">
            <field name="act_from" ref="in_process"/>
            <field name="act_to" ref="active"/>
            <field name="signal">active</field>
        </record>
    </data>
</openerp>