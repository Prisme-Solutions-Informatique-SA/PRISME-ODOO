<odoo>
    <data>
        <!-- Adding the Signed Amount to the invoice line form -->
        <record id="prisme_accountline_client_form" model="ir.ui.view">
        	<field name="name">prisme.accountline.client.form</field>
        	<field name="model">account.invoice.line</field>
        	<field name="inherit_id" ref="account.view_invoice_line_form"/>
            <field name="arch" type="xml">
            	<xpath expr="//field[@name='price_unit']" position="attributes">
            		<attribute name="widget">monetary</attribute>
            		<attribute name="options">{'currency_field': 'currency_id'}</attribute>
            		<attribute name="readonly">True</attribute>
            	</xpath>
            	<xpath expr="//field[@name='price_unit']" position="after">
            		<field name="local_currency_id" invisible="1"></field>
            		<field name="price_subtotal_signed" widget='monetary' options="{'currency_field': 'local_currency_id'}" readonly="True"/>
            	</xpath>
            </field>
        </record>
	</data>
</odoo>
