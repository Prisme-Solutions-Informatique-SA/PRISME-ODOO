<odoo>
    <data>
		<!--Sale Line -->
        <record id="prisme_sale_line_view_tree" model="ir.ui.view">
            <field name="name">prisme.sale.line.view.tree</field>
            <field name="model">sale.order.line</field>
            <field name="arch" type="xml">
				<tree string="Sale lines">
					<field name="company_id"/>
					<field name="order_id"/>
					<field name="order_partner_id"/>
					<field name="currency_id"/>
					<field name="product_id"/>
					<field name="price_unit"/>
					<field name="product_uom_qty"/>
					<field name="price_subtotal" string="Amount in currency"/>
					<field name="amount_local_currency" widget="monetary" options="{'currency_field':'local_currency'}"/>
					<field name="local_currency" invisible="True"/>
					<field name="name"/>
					<field name="state"/>
				</tree>
            </field>
        </record>
        
        <record id="prisme_sale_line_view_pivot" model="ir.ui.view">
            <field name="name">prisme.sale.line.view.pivot</field>
            <field name="model">sale.order.line</field>
            <field name="arch" type="xml">
				<pivot string="Sale lines">
					<field name="product_id"/>
					<field name="product_uom_qty"/>
					<field name="qty_invoiced"/>
					<field name="qty_delivered"/>
					<field name="price_unit"/>
					<field name="amount_local_currency"/>
				</pivot>
            </field>
        </record>
		
		<record model="ir.actions.act_window" id="prisme_sale_line">
			<field name="name">Sale lines</field>
			<field name="res_model">sale.order.line</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form,pivot</field>
			<field name="view_id" ref="prisme_sale_line_view_tree"/>
		</record>

		<!-- Menu -->
		<menuitem name="Sales lines" id="menu_prisme_sale_line" parent="sale.sale_order_menu" sequence="14" action="prisme_sale_line"/>
    </data>
</odoo>
