<odoo>
	<data>
		<!--Sale Line -->
		<record id="prisme_sale_line_view_tree" model="ir.ui.view">
			<field name="name">prisme.sale.line.view.tree</field>
			<field name="model">sale.order.line</field>
			<field name="arch" type="xml">
				<!-- <tree string="Sale lines" create="false"> -->
				<tree string="Sale lines">
					<field name="company_id" />
					<field name="order_id" />
					<field name="order_partner_id" />
					<field name="currency_id" />
					<field name="product_id" />
					<field name="price_unit" />
					<field name="product_uom_qty" />
					<field name="price_subtotal" string="Amount in currency"/>
					<field name="amount_local_currency" widget="monetary" options="{'currency_field':'local_currency'}"/>
					<field name="local_currency" invisible="True"/>
					<field name="name" />
					<field name="state" />
				</tree>
			</field>
		</record>
        
        <record id="prisme_sale_line_view_pivot" model="ir.ui.view">
            <field name="name">prisme.sale.line.view.pivot</field>
            <field name="model">sale.order.line</field>
            <field name="arch" type="xml">
				<pivot string="Sale lines">
					<field name="product_id"/>
					<field name="product_uom_qty"/>
					<field name="qty_invoiced"/>
					<field name="qty_delivered"/>
					<field name="price_unit"/>
					<field name="amount_local_currency"/>
				</pivot>
            </field>
        </record>

		<record id="prisme_sale_line_view_form" model="ir.ui.view">
			<field name="name">prisme.sale.line.view.form</field>
			<field name="model">sale.order.line</field>
			<field name="arch" type="xml">
				<!-- <form create="false" edit="false"> -->
				<form duplicate="0">

					<sheet string="Sales Order Line">
						<group col="4">
							<field name="product_uom_category_id"  invisible="1"/>
							<field name="order_id" on_change="1" can_create="true"
								can_write="true" modifiers="{'required': true}" />
							<newline />
							<field name="product_id" on_change="1" can_create="true"
								can_write="true" modifiers="{}" />
							<field name="name" colspan="4"
								modifiers="{'required': true}" />
							<newline />
							<field name="sequence" modifiers="{}" />
							<newline />
							<field name="invoice_lines" colspan="4" on_change="1"
								can_create="true" can_write="true" modifiers="{}" />
							<newline />
							<field name="invoice_status"
								modifiers="{'readonly': true}" />
							<field name="price_unit" on_change="1"
								modifiers="{'required': true}" />
							<newline />
							<field name="tax_id" colspan="4" on_change="1"
								can_create="true" can_write="true" modifiers="{}" />
							<newline />
							<field name="price_reduce_taxinc" on_change="1"
								modifiers="{'readonly': true}" />
							<field name="price_reduce_taxexcl"
								modifiers="{'readonly': true}" />
							<field name="product_updatable"
								modifiers="{'readonly': true}" />
							<field name="product_uom_qty" on_change="1"
								modifiers="{'required': true}" />
							<field name="product_uom" on_change="1" can_create="true"
								can_write="true" modifiers="{'required': true}" />
							<field name="product_image" modifiers="{}" />
							<field name="qty_delivered" on_change="1" modifiers="{}" />
							<field name="qty_to_invoice" on_change="1"
								modifiers="{'readonly': true}" />
							<field name="qty_invoiced" on_change="1"
								modifiers="{'readonly': true}" />
							<field name="salesman_id" can_create="true"
								can_write="true" modifiers="{'readonly': true}" />
							<field name="currency_id" can_create="true"
								can_write="true" modifiers="{'readonly': true}" />
							<field name="company_id" can_create="true" can_write="true"
								modifiers="{'readonly': true}" />
							<field name="order_partner_id" can_create="true"
								can_write="true" modifiers="{'readonly': true}" />
							<newline />
							<field name="analytic_tag_ids" colspan="4"
								can_create="true" can_write="true" modifiers="{}" />
							<newline />
							<field name="is_downpayment" modifiers="{}" />
							<field name="state" on_change="1"
								modifiers="{'readonly': true}" />
							<field name="product_packaging" on_change="1"
								can_create="true" can_write="true" modifiers="{}" />
							<field name="route_id" on_change="1" can_create="true"
								can_write="true" modifiers="{}" />
							<newline />
							<field name="move_ids" colspan="4" on_change="1"
								modifiers="{}" />
							<newline />
							<!-- Old ons_productivity_sale_layout dependency. Will be removed once everything is done -->
							<!-- <field name="layout_type" on_change="1"
								modifiers="{'required': true}" />
							<field name="rel_subtotal"
								modifiers="{'readonly': true}" /> -->
							<field name="price_subtotal" on_change="1"
								modifiers="{'readonly': true}" />
							<field name="price_tax"
								modifiers="{'readonly': true}" />
							<field name="price_total" on_change="1"
								modifiers="{'readonly': true}" />
							<field name="price_reduce"
								modifiers="{'readonly': true}" />
							<field name="customer_lead" on_change="1" modifiers="{}" />
							<separator />
						</group>
					</sheet>


				</form>
			</field>
		</record>

		<record model="ir.actions.act_window" id="prisme_sale_line">
			<field name="name">Sale lines</field>
			<field name="res_model">sale.order.line</field>
			<field name="view_mode">form</field>
			<field name="view_mode">tree,form,pivot</field>
			<field name="view_id" ref="prisme_sale_line_view_tree" />
		</record>

		<!-- Menu -->

		<menuitem name="Sales lines" id="menu_prisme_sale_line"
			parent="sale.sale_order_menu" sequence="14"
			action="prisme_sale_line" />
			
		
	</data>
</odoo>
