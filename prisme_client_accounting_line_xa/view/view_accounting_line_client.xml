<odoo>
    <data>
		<!-- Creating the Customer Invoices Lines tree view -->
		<record id="prisme_accountline_client_tree" model="ir.ui.view">
            <field name="name">prisme.accountline.client.tree</field>
            <field name="model">account.invoice.line</field>
            <field name="arch" type="xml">
				<tree string="Customer Invoices Lines" create="false">
					<field name="invoice_id"/>
					<field name="state"/>
					<field name="date_invoice"/>
					<field name="partner_id"/>
					<field name="origin"/>
					<field name="product_id"/>
					<field name="name"/>
					<field name="account_id"/>
					<field name="price_unit"/>
					<field name="currency_id"/>
					<field name="quantity"/>
					<field name="price_subtotal"/>
					<field name="local_currency_id" invisible="1"/>
            		<field name="price_subtotal_signed" widget='monetary' options="{'currency_field': 'local_currency_id'}"/>
					<field name="journal_id"/>
					<field name="account_analytic_id"/>
					<field name="invoice_line_tax_ids"/>
					
				</tree>
            </field>
        </record>
		
		<!-- Action for the Customer Invoices Line -->
		<record model="ir.actions.act_window" id="prisme_accountline_client">
			<field name="name">Customer Invoices Lines</field>
			<field name="res_model">account.invoice.line</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form,pivot</field>
			<field name="domain">[('invoice_id.type','=',['out_invoice','out_refund'])]</field>
			<field name="view_id" ref="prisme_accountline_client_tree"/>
		</record>
		
		<!-- Creating the submenu line -->
		<menuitem name="Customer Invoices Lines" id="menu_prisme_account_line_client" parent="account.menu_finance_receivables" sequence="1" action="prisme_accountline_client"/>
		
		<!-- Creating the search view for the Customer Invoices Lines -->
		<record model="ir.ui.view" id="search_view_prisme_accountline_client_tree">
			<field name="name">prisme.accountline.client.tree</field>
			<field name="model">account.invoice.line</field>
	        <field name="arch" type="xml">
	            <search string="Supplier Accounting Line">
					<filter string="Partner" name="partner_id" domain="[]" context="{'group_by':'partner_id'}"/>
					<filter string="Product" name="product_id" domain="[]" context="{'group_by':'product_id'}"/>
					<filter string="Account" name="account_id" domain="[]" context="{'group_by':'account_id'}"/>
					<filter string="Currency" name="currency_id" domain="[]" context="{'group_by':'currency_id'}"/>
					<filter string="Journal" name="journal_id" domain="[]" context="{'group_by':'journal_id'}"/>
					
					<filter string="Analytic Account" name="account_analytic_id" domain="[]" context="{'group_by':'account_analytic_id'}"/>
					<filter string="Open" name="unpaid" domain="[('state', '=', 'open')]"/>
					<filter string="Paid" name="paid" domain="[('state', '=', 'paid')]"/>
					<filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
					<filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancel')]"/>
				</search>
	        </field>
	    </record>
	</data>
</odoo>
