<odoo>
	<data>
		<record model="ir.ui.view" id="view_move_line_form_prisme">
			<field name="name">stock.move.line.form.prisme</field>
			<field name="model">stock.move.line</field>
			<!-- <field name="type">search</field> -->
			<field name="inherit_id" ref="stock.view_move_line_form" />
			<field name="arch" type="xml">
				<!-- set new filter domain -->
				<xpath expr="//field[@name='lot_id']" position="attributes">
					<attribute name="domain">[('product_id','=', parent.product_id),'|',('end_life_date','=',False),('end_life_date','&gt;=',datetime.datetime.now())]</attribute>
				</xpath>
				
			</field>
		</record>
	</data>
</odoo>